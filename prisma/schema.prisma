// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
 binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  @@map("user")
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String
  name  String?
  employee Employee?
  lastAccess DateTime
  isActive Boolean
  createAt DateTime
  updatedAt DateTime
}

model Permission {
  @@map("permission")
  id Int @id @default(autoincrement())
  description String
  type String
  parentId Int @unique
  parent Permission? @relation("SubPermission", fields: [parentId], references: [id])
  subPermissions Permission[]  @relation("SubPermission")
  isActive Boolean
}

model Employee {
  @@map("employee")
  id    Int     @id @default(autoincrement())
  firstName String
  lastname String
  address Address[]
  corporatePhone String
  personalPhone String
  corporateEmail String
  personalEmail String
  userId Int @unique
  user User @relation(fields: [userId], references: [id])
  isActive Boolean
  createAt DateTime
  updatedAt DateTime
}

model Address {
  @@map("address")
  id Int @id @default(autoincrement())
  cep String
  street String
  number String
  district String
  city String
  uf String
  addressType String
  isResidential Boolean
  isMain Boolean
  employeeId Int @unique
  employee Employee @relation(fields: [employeeId], references: [id])
  createAt DateTime
  updatedAt DateTime
}